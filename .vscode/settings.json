{
  // turns compact folders off
  "explorer.compactFolders": false,
  // turns the minimap off
  "editor.minimap.enabled": false,
  // specifies the color theme when system color mode is dark
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  // set prettier as the default formatter for all languages
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // enable format on save
  "editor.formatOnSave": true,
  // automatically organize imports on save (removes unused, sorts, them)
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // controls the font size
  "editor.fontSize": 14
}
